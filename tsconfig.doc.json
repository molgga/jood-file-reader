{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es6",
    "types": ["@types/node"]
  },
  "include": ["projects/packages/**/**.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/test.ts",
    "public-api.*.ts",
    "**/public-api.ts",
    "**/public-api.*.ts"
  ]
}
